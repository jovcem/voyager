{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Setup: Docker & Migrations",
      "type": "shell",
      "command": "${workspaceFolder}/scripts/setup.sh",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "Run: Python API",
      "type": "shell",
      "command": "source venv/bin/activate && python run_api.py",
      "options": {
        "cwd": "${workspaceFolder}/backend"
      },
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false,
        "group": "services"
      },
      "dependsOn": ["Setup: Docker & Migrations"]
    },
    {
      "label": "Run: Web App",
      "type": "shell",
      "command": "npm run dev",
      "options": {
        "cwd": "${workspaceFolder}/web"
      },
      "isBackground": true,
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false,
        "group": "services"
      },
      "dependsOn": ["Setup: Docker & Migrations"]
    },
    {
      "label": "Start All Services",
      "dependsOn": [
        "Run: Python API",
        "Run: Web App"
      ],
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    }
  ]
}
